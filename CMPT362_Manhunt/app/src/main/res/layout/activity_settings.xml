<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF424242"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:textSize="32sp"
            android:textColor="#FFFFFFFF"
            android:textAlignment="center"
            android:background="#FFB71C1C"
            android:padding="20dp"
            android:layout_marginBottom="24dp"/>

        <!-- Hunter Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Hunter"
            android:textSize="18sp"
            android:textColor="#FFFFFFFF"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinnerHunterSelection"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFFFF"
            android:layout_marginBottom="16dp"
            android:padding="12dp"/>

        <!-- Hunter's Range Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hunter's Range (meters)"
            android:textSize="18sp"
            android:textColor="#FFFFFFFF"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etHunterRange"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFFFF"
            android:inputType="number"
            android:hint="Enter hunter's range"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Runner's Range  -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Runner's Range (meters)"
            android:textSize="18sp"
            android:textColor="#FFFFFFFF"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etRunnerRange"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFFFF"
            android:inputType="number"
            android:hint="Enter runner's range"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Ability Mode -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ability Mode"
            android:textSize="18sp"
            android:textColor="#FFFFFFFF"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinnerAbilityMode"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFFFF"
            android:layout_marginBottom="16dp"
            android:padding="12dp"/>

        <!-- Timer Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timer"
            android:textSize="18sp"
            android:textColor="#FFFFFFFF"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinnerTimer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFFFF"
            android:layout_marginBottom="8dp"
            android:padding="12dp"/>

        <!-- Custom Timer Input-->
        <EditText
            android:id="@+id/etCustomTimer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFFFF"
            android:inputType="number"
            android:hint="Enter custom time (minutes)"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="24dp"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Save"
            android:textSize="20sp"
            android:textColor="#FFFFFFFF"
            android:background="#FFB71C1C"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>