<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF424242">

    <!-- Game End Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFB71C1C"
        android:padding="24dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GAME END"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="#FFFFFFFF"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvFinalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28min 23sec"
            android:textSize="24sp"
            android:textColor="#FFFFFFFF"
            android:gravity="center"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Map Section -->
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Statistics Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFB71C1C"
        android:padding="24dp">

        <!-- Remaining Survivor -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Remaining Survivor"
                android:textSize="20sp"
                android:textColor="#FFFFFFFF"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvRemainingSurvivor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user3"
                android:textSize="20sp"
                android:textColor="#FFFFFFFF"
                android:textAlignment="textEnd"/>
        </LinearLayout>

        <!-- Longest Distance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Longest Distance"
                android:textSize="20sp"
                android:textColor="#FFFFFFFF"/>

            <TextView
                android:id="@+id/tvLongestDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3km"
                android:textSize="20sp"
                android:textColor="#FFFFFFFF"
                android:textAlignment="textEnd"/>
        </LinearLayout>

        <!-- You Travelled -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="You Travelled"
                android:textSize="20sp"
                android:textColor="#FFFFFFFF"/>

            <TextView
                android:id="@+id/tvYouTravelled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3km"
                android:textSize="20sp"
                android:textColor="#FFFFFFFF"
                android:textAlignment="textEnd"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Main Menu Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMainMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_margin="16dp"
        app:backgroundTint="#FFF9A825"
        android:textColor="#FF000000"/>

</LinearLayout>