<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFB71C1C"
        android:padding="16dp"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You are HUNTER!!!"
            android:textSize="32sp"
            android:textColor="#FFFFFFFF"
            android:textAlignment="center"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvGameTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="28min 23sec"
            android:textSize="24sp"
            android:textColor="#FFFFFFFF"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Google Map -->
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout" />

    <!-- Ability bar (Reveal) overlaid at bottom -->
    <LinearLayout
        android:id="@+id/abilityBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="#80000000"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnRevealAbility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REVEAL" />

        <TextView
            android:id="@+id/tvRevealStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFFFFF"
            android:layout_marginStart="16dp" />
    </LinearLayout>

</RelativeLayout>
